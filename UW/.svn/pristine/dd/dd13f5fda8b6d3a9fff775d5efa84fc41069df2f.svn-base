#!/usr/bin/env python

import numpy as np
import matplotlib.pyplot as plt

import sys
if len( sys.argv ) < 3:
	print( "usage: {} title [label data_file]*".format( sys.argv[0] ) )

title = sys.argv[1]
labels = sys.argv[2::2]
files = sys.argv[3::2]

datas = [ np.genfromtxt( f, delimiter="\t", skip_header=1, dtype=float )
	for f in files ]

for i in range( len(datas) ):
	plt.subplot(len(datas), 1, i+1)
	plt.plot( datas[i][:,0], datas[i][:,1] )
	if i == 0:
		plt.title( title )
	plt.ylabel( labels[i] )

plt.show()
